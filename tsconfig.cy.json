{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "es2015", // or "preserve"
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "types": ["cypress"]
  },
  "include": ["cypress/**/*.ts", "**/*.ts", "**/*.tsx"]
}
